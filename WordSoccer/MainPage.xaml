<Page
	x:Class="WordSoccer.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Style="{StaticResource PageStyle}">

	<Grid
		Style="{StaticResource MainMenuStyle}"
		HorizontalAlignment="Center"
		VerticalAlignment="Center">

		<StackPanel
			Style="{StaticResource MainMenuWrapperStyle}">

			<TextBlock
				Foreground="#555555"
				FontWeight="SemiBold"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Text="Word soccer"
				FontSize="30"
				Margin="0 0 0 20"/>

			<Button
				Style="{StaticResource MainMenuButtonStyle}"
				Content="Play game"
				Click="OnClickPlayGameButton"/>

			<Button
				Style="{StaticResource MainMenuButtonStyle}"
				Content="Settings"
				Click="OnClickSettingsButton"/>
			
			<Button
				Style="{StaticResource MainMenuButtonStyle}"
				Content="Exit"
				Click="OnClickExitButton"/>

		</StackPanel>

	</Grid>

</Page>